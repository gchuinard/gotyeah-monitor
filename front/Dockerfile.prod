FROM node:20 AS builder
WORKDIR /app

COPY package*.json ./
RUN npm install
COPY . .

# Build Svelte en mode PROD (charge .env.production)
RUN npm run build

# ---- IMAGE FINALE ----
FROM nginx:stable-alpine
COPY --from=builder /app/dist /usr/share/nginx/html

# Expose port HTTP
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
